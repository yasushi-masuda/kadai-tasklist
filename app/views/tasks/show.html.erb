<div class='text-center'>
  <h1>タスクの詳細</h1>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-sm-6'>
      <p class='mb-0'><span class='badge badge-pill badge-info'>タスク</span><%= @task.content %></p>
    </div>
    <div class='col-sm-3'>
      <p class='mb-0'><span class='badge badge-pill badge-secondary'>状態</span><%= @task.status %></p>
    </div>
    <div>
      <% if current_user == @task.user %>
        <%= link_to '編集する',edit_task_path(@task) %>
        <%= link_to '削除する',@task,method: :delete,data:{confirm: '本当に削除しますか'} %>
      <% end %>
    </div>
  </div>
</div>
